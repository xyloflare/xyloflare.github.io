---
import Layout from "@/layouts/Layout.astro";
import Model from "@/components/Model.astro";
import Content from "@/components/Content.astro";
---

<Layout>
  <div class="grid grid-cols-2 grow gap-2 h-full">
    <div class="flex flex-col items-center">
      <Model client:load />
      <div class="w-[82%] rounded-2xl px-2 py-4 -mt-32 backdrop-blur-2xl">
        <h1 class="text-6xl font-mplus font-extrabold font-inter">
          Mohit Panwar
        </h1>
        <h2 class="text-2xl opacity-80 font-inter">
          Software Developer - Digital Craftsman & Freethinker
        </h2>
        <div class="mt-6 flex gap-5 h-8">
          <img
            src="/linkedin.svg"
            alt=""
            width="32"
            class="aspect-square h-full"
          />
          <img
            src="/Discord-Symbol-White.svg"
            alt=""
            width="32"
            class="aspect-square h-full"
          />
          <img
            src="/github-mark-white.svg"
            alt=""
            width="32"
            class="aspect-square h-full"
          />
        </div>
      </div>
    </div>
    <div class="py-10 pr-20 pl-10 text-xl h-full">
      <Content />
    </div>
  </div>
</Layout>
